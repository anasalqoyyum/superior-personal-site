---
import type { CollectionEntry } from 'astro:content'

type Props = CollectionEntry<'blog'>['data'] & { url: string }

const { title, summary, url, publishedAt } = Astro.props
const publishDate = new Date(publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
})
---

<article class="group border-b pb-6 transition-all dark:border-gray-700">
  <a href={url} class="block">
    <div class="flex flex-col space-y-2">
      <h2 class="text-xl font-semibold text-slate-900 transition-colors group-hover:text-sky-500 dark:text-slate-100">
        {title}
      </h2>
      <p class="text-sm text-gray-600 dark:text-gray-400">
        {publishDate}
      </p>
      <p class="text-gray-700 dark:text-gray-300">
        {summary}
      </p>
    </div>
  </a>
</article>
