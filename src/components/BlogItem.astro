---
import type { PostFrontMatter } from '../pages/blog.astro'

const { title, summary, url, publishedAt } = Astro.props as PostFrontMatter & { url: string }
// Convert publishedAt (string like "2025-09-04") into a Date
const publishDate = new Date(publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
})
---

<article class="group border-b dark:border-gray-700 pb-6 transition-all">
  <a href={url} class="block">
    <div class="flex flex-col space-y-2">
      <h2 class="text-xl font-semibold group-hover:text-sky-500 transition-colors">
        {title}
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-sm">
        {publishDate}
      </p>
      <p class="text-gray-700 dark:text-gray-300">
        {summary}
      </p>
    </div>
  </a>
</article>
