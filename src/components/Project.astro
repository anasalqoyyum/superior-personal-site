---
export type Props = {
  url: string
  title: string
}

const { url, title } = Astro.props as Props
---

<section
  class="project relative -mx-3 block rounded-lg border border-slate-100 px-4 py-3 transition-shadow duration-200 hover:shadow-xl sm:mx-0 sm:px-6 sm:py-5 dark:transform dark:border-slate-700 dark:transition-transform dark:hover:-translate-y-1"
>
  <h3 class="mb-2 flex items-center text-xl font-bold">
    <a href={url} class="block-link">
      {title}
    </a>
    <svg class="ml-auto h-6 w-6 opacity-60">
      <use xlink:href="#github-icon"></use>
    </svg>
  </h3>
  <p>
    <slot />
  </p>
</section>
